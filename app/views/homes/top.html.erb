<main class="container custom-container">
<%= render 'shared/flash_message' %>
  <div class="text-center bg-success text-white py-5">
    <h1>ベイブレード交流掲示板</h1>
  </div>
  <nav class="nav">
    <h3>
      <%= link_to 'このサイトの使い方' , '/manual' , class: 'nav-link h3' %>
    </h3>
  </nav>
  <h2><%= link_to '掲示板一覧' , boards_path , class: 'nav-link text-primary' %></h2>
  <div class="row me-5 mt-5 ">
    <!-- ピックアップ -->
    <div class="col-8 mb-4">
      <h2 class="h4">ピックアップ</h2>
      <ul class="list-group">
        <% if @pickup_boards.present? %>
          <% @pickup_boards.each do |board| %>
            <li class="list-group-item">
              <%= link_to board.title, board_path(board) %>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">ピックアップ掲示板はありません</li>
        <% end %>
      </ul>
    </div>

    <!-- 人気 -->
    <div class="col-8 mb-4">
      <h2 class="h4">人気</h2>
      <ul class="list-group">
        <% if @popular_boards.present? %>
          <% @popular_boards.each do |board| %>
            <li class="list-group-item">
              <%= link_to board.title,board_path(board) %>
            </li>
          <% end %>
        <% else %>
            <li class="list-group-item">人気の掲示板はありません</li>
        <% end %>
      </ul>
    </div>

    <!-- 新着 -->
    <div class="col-8 mb-4">
      <h2 class="h4">新着</h2>
      <ul class="list-group">
        <% if @recent_boards.present? %>
          <% @recent_boards.each do |board| %>
            <li class="list-group-item">
              <%= link_to board.title, board_path(board) %>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">新着掲示板はありません</li>
        <% end %>
      </ul>
    </div>
  </div>
</main>
