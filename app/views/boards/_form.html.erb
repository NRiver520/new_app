<%= form_with model: @board do |f| %>
  <div class="mb-3">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :本文 %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <%= f.submit "作成" ,class: "btn btn-primary" %>
<% end %>