<div class="col-sm-12 col-12 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to board.title, board_path(board) %>
          </h4>
          <div class='ms-auto'>
            <%= link_to '#', id: 'button-edit-#{board.id}' do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to '#', id: 'button-delete-#{board.id}', method: :delete, data: {confirm: '本当に削除しますか？'} do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-person"></i>
            <img src="<%= board.user.profile_image || asset_path('default.png') %>" alt="user-icon" class="rounded-circle" width="30" height="30"><%= board.user.username %>
          </li>
          <li><i class="bi bi-calendar"></i><%= l board.created_at, format: :strftime %></li>
        </ul>
        <p class="card-text"><%= truncate(board.body, length: 20) %></p>
      </div>
    </div>
  </div>
</div>