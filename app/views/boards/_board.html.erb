<div class="col-sm-12 col-12 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to board.title, board_path(board) %>
          </h4>
        </div>
        <ul class="list-inline">
          <li>
            <img src="<%= board.user.profile_image || asset_path('default.png') %>" alt="user-icon" class="rounded-circle" width="30" height="30"><%= board.user.username %>
          </li>
          <%= l board.created_at, format: :strftime %></li>
        </ul>
        <p class="card-text"><%= truncate(board.body, length: 20) %></p>
      </div>
    </div>
  </div>
</div>