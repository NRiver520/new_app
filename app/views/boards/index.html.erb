<div class="container pt-3" style="padding-bottom: 50px;">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <form>
        <div class="input-group mb-3">
          <%= render 'search_form', url: boards_path, q: @q %>
          <div class="input-group-append ms-2">
            <%= link_to '新規作成' , new_board_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.any? %>
          <%= render @boards %>
        <% else %>
          <div class="mb-3">掲示板がありません</div>
        <% end %>
      </div>
      <%= paginate @boards, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
