<header class="bg-light border-bottom">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag 'favicon.ico' , class: 'img-fiuld' , style: 'height: 60px;' %>
        <% end %>
      </div>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <%= link_to '掲示板一覧' , boards_path , class: 'nav-link text-primary' %>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <%= link_to '<i class="bi bi-person" style="font-size: 40px;"></i>'.html_safe, '#', class: 'd-flex align-items-center text-decoration-none dropdown-toggle', id: 'dropdownUser', data: { bs_toggle: 'dropdown' }, aria: { expanded: 'false'} %>
            <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="dropdownUser">
              <li>
                <img src="<%= current_user.profile_image.present? ? current_user.profile_image.url : asset_path('default.png') %>" alt="user-icon" class="rounded-circle border border-3 <%= rank_border_class(current_user.rank) %>" width="50" height="50"><%= current_user.username %>
              </li>
              <li><%= link_to 'ユーザー情報', profile_path, class: 'dropdownitem' %></li>
            </ul>
          </li>
        </ul>
        <%= link_to 'ログアウト', logout_path, class: 'btn btn-danger ms-3', data: { turbo_method: :delete } %>
      </div>
    </div>
  </nav>
</header>