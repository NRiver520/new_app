<header class="bg-light border-bottom">
  <div class="container d-flex justify-content-between align-items-center py-2">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png' , class: 'img-fiuld' , style: 'height: 40px;' %>
      <% end %>
    </div>
    <nav class="nav">
      <%= link_to '掲示板一覧' , boards_path , class: 'nav-link' %>
      <%= link_to '人気(未実装)' , '#' , class: 'nav-link' %>
      <%= link_to '新着(未実装)' , '#' , class: 'nav-link' %>
    </nav>
    <div class="dropdown">
      <%= link_to'<i class="bi bi-person" style="font-size: 40px;"></i>'.html_safe, '#', class: 'd-flex align-items-center text-decoration-none dropdown-toggle', id: 'dropdownUser', data: { bs_toggle: 'dropdown' }, aria: { expanded: 'false'} %>

      <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="dropdownUser">
        <li><img src="<%= current_user.profile_image || asset_path('default.png') %>" alt="user-icon" class="rounded-circle border border-3 <%= rank_border_class(current_user.rank) %>" width="40" height="40"><%= current_user.username %></li>
        <li><%= link_to 'ユーザー情報', '#', class: 'dropdownitem' %></li>
        <li><%= link_to '参加中の掲示板', '#', class: 'dropdownitem' %></li>
        <li><%= link_to 'DM', '#', class: 'dropdownitem' %></li>
        <li><%= link_to 'この掲示板について', '#', class: 'dropdownitem' %></li>
        <li><hr class="dropdown-diviver"></li>
        <li><%= link_to 'ログアウト', logout_path, class: 'dropdown-item text-danger', data: { turbo_method: :delete } %></li>
      </ul>
    </div>
  </div>
</header>