<% content_for(:title, 'ログイン') %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :メールアドレス, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :パスワード, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3 form-check">
          <%= f.label :remember_me, class: "form-check-label" do %>
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <span>このコンピュータにログイン情報を保存</span>
          <% end %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to '会員登録へ', new_user_path %>
        <%= link_to "Googleでログイン", auth_at_provider_path(provider: :google) %>
      </div>
    </div>
  </div>
</div>